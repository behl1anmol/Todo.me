<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Todo.me.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Todo.me"
    xmlns:view="clr-namespace:Todo.me.View"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">



    <TabBar>
        <Tab Title="ToDo"
            Icon="todo.png">
            <ShellContent Title="Todo" ContentTemplate="{DataTemplate view:TodoView}"
                    Route="TodoView" />
        </Tab>
        <Tab Title="Sprints"
            Icon="sprint.png">
            <ShellContent Title="Sprint" ContentTemplate="{DataTemplate view:SprintView}"
                    Route="SprintView" />
        </Tab>
        <Tab Title="Settings"
            Icon="setting.png">
            <ShellContent Title="Todo" ContentTemplate="{DataTemplate view:TodoView}"
                    Route="TodoView" />
        </Tab>
    </TabBar>


</Shell>
